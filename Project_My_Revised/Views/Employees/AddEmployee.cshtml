@model Project_My_Revised.Models.EmpMod
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>



   <div class="form-create">
@using (Html.BeginForm(new { name = "registration", id = "frm" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend class="text-center">Create New Employee Details</legend>

        
        
        <div class="col-md-4 col-md-offset-2">
           <div class="editor-label">
              @Html.LabelFor(model => model.Name)
           </div>
           <div class="editor-field">
              @Html.TextBoxFor(model => model.Name,new {@placeholder = "Enter Your First Name" })
              @Html.ValidationMessageFor(model => model.Name)
           </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
           <div class="editor-label">
              @Html.LabelFor(model => model.Address)
           </div>
           <div class="editor-field">
              @Html.TextBoxFor(model => model.Address,new {@placeholder = "Enter Your Address" })
              @Html.ValidationMessageFor(model => model.Address)
           </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
           <div class="editor-label">
              @Html.LabelFor(model => model.Contact_number)
           </div>
           <div class="editor-field">
              @Html.TextBoxFor(model => model.Contact_number,new {@placeholder = "Enter Your Contact Number" })
              @Html.ValidationMessageFor(model => model.Contact_number)
           </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
           <div class="editor-label">
              @Html.LabelFor(model => model.Pan)
           </div>
           <div class="editor-field">
              @Html.TextBoxFor(model => model.Pan,new {@placeholder = "Enter Your PAN Number" })
              @Html.ValidationMessageFor(model => model.Pan)
           </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="editor-label">
                @Html.LabelFor(model => model.Start_date)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Start_date,new {@placeholder = "(Format: MM/DD/YYYY)" })
                @Html.ValidationMessageFor(model => model.Start_date)
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="editor-label">
                @Html.LabelFor(model => model.End_date)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.End_date,new {@placeholder = "(Format: MM/DD/YYYY) optional" })
                @Html.ValidationMessageFor(model => model.End_date)
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="editor-label">
                @Html.LabelFor(model => model.Date_of_birth)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Date_of_birth,new {@placeholder = "(Format: MM/DD/YYYY)" })
                @Html.ValidationMessageFor(model => model.Date_of_birth)
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="editor-label">
                @Html.LabelFor(model => model.Salary)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Salary,new {@placeholder = "Enter Your Salary" })
                @Html.ValidationMessageFor(model => model.Salary)
            </div>
        </div>

        <div class="col-md-4 col-md-offset-2">
            <div class="editor-label custom-inline">
                @Html.LabelFor(model => model.Status)
            </div>
            <div class="editor-field custom-inline">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
         </div>
        
        <div class="col-md-6 col-md-offset-3 text-center">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </fieldset>
}

<div class="b-link">
    @Html.ActionLink("Back to List", "GetAllEmpDetails")
</div>
</div>
